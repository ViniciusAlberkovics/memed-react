{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "./",
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "composite": false,
    "downlevelIteration": true,
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "react"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**",
    "examples/**"
  ]
}
